<% include ../partials/header %>

<div class="ui container formContainer">
        <h2>Register</h2>
        <form action="/register" method="POST" class="ui form">
            <div class="field">
                <input type="text" name="username" placeholder="Name" required>
            </div>
            <div class="field">
                <select name="gender" required>
                    <option value="male">male</option>
                    <option value="female">female</option>
                    <option value="">none</option>
                </select>
            </div>
            <div class="field">
                <input type="password" name="password" placeholder="Password" minlength="5" maxlength="15" required>
            </div>
            <div class="field">
                <input type="text" name="registerToken" placeholder="Register Token">
            </div>
            <div class="field">
                <div class="ui checkbox">
                    <input type="checkbox" required>
                    <label>I agree to the Terms and Conditions</label>
                </div>
            </div>
            <input class="ui button" type="submit" value="Register">
        </form>
    </div>

<% include ../partials/footer %>