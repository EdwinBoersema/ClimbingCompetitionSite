<% include ../partials/header %>
<% include ../partials/compnav %>

<div class="ui container">
    <form class="ui form" action="/competitions/<%=competition._id%>?_method=PUT" method="POST">
        <h1 class="ui dividing header centered">Edit <%=competition.name%></h1>
        <div class="field">
            <label>Competition Name</label>
            <input name="name" type="text" placeholder="Competition name" required value="<%= competition.name%>">
        </div>
        <div class="two fields">
            <div class="field">
                <label>Start date</label>
                <input name="startDate" type="datetime-local" placeholder="Start date" required value="<%=competition.startDate %>">
            </div>
            <div class="field">
                <label>End date</label>
                <input name="endDate" type="datetime-local" placeholder="End date" required value="<%=competition.endDate %>">
            </div>
        </div>
        <div class=" field">
            <label>Info</label>
            <textarea name="info"><%=competition.info%></textarea>
        </div>
        <div class="field">
            <input class="ui button centered" type="submit" value="Edit <%=competition.name%>">
        </div>
    </form>
</div>

