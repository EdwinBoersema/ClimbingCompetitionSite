<% include ../partials/header %>


<div class="ui container">
    <h1>Competitions</h1>
</div>

<div class="ui items container">
        <% for (let i = 0; i < competitions.length; i ++) { %>
        <div class="ui item grid compItem">
            <div class="row compTitle">
                <a href="/competitions/<%= competitions[i]._id%>">
                <h2><%= competitions[i].name %></h2>
                </a>
            </div>
            <div class="row">
                <% for (let j = 0; j < competitions[i].category; j ++ ) { %>
                <div class="four wide collumn compCategory">
                    <%= competitions[i].category.name[j] + " " + competitions[i].category.gender[j] %>
                </div>
                <% } %>
            </div>
            <div class="row">
                <%= competitions[i].info %>
            </div>
            <div></div>
        </div>
        <div class="ui divider"></div>
        <% } %>
    </div>

<% include ../partials/footer %>